#compdef weather

_weather(){
    _arguments \
        '(- *)'{-h,--help}'[show help]' \
        '*: :->locate'

    case $state in
        $locate)
            _values \
                'Supported locations' \
                'city name' \
                'airport code (3 letters)' \
                'domain name'
            ;;
    esac
}
