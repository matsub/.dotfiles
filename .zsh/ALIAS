#!/bin/zsh
alias l="ls -lG"
alias la="ls -lGa"
alias vi="nvim"
alias vim="nvim"
alias py="python3"
alias tk="tmux kill-session -t"

# CLI chrome
alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome"
alias chrome-canary="/Applications/Google\ Chrome\ Canary.app/Contents/MacOS/Google\ Chrome\ Canary"
alias chromium="/Applications/Chromium.app/Contents/MacOS/Chromium"
alias chrome-headless="chrome --headless --disable-gpu"

# tools
alias stime="/usr/bin/time -p"
alias reload="exec -l $SHELL"
alias randgen="openssl rand -base64"
alias clock="tty-clock -DnsC 7"

# brew doctor ignoring pyenv config
alias brewdoc="env PATH=${PATH/${HOME}\/\.pyenv\/shims:/} brew doctor"

function mmdc-foreach {
    for f in `ls *.mermaid`
    do
        mmdc -i $f -o ${f:r}.svg
    done
}
